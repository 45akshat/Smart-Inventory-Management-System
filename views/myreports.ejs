    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/user.css">
    <title>User Dashboard</title>
</head>
<body>
  <div class="container">
    <div class="sidebar">
        <div class="logo">
            <h3>Boomers</h3>
        </div>
        <button class="report-button"><a href="/reportnew">+ New Report</a></button>
        <div class="smallMenu">Channels</div>

        <div class="button-group">
            <a href=""><button class="button">Bribe</button></a>
            <a href=""><button class="button">Corruption</button></a>
            <a href=""><button class="button">Laundering</button></a>
            <a href=""><button class="button">Political</button></a>
            <a href=""><button class="button">Other</button></a>
            <a href=""><button class="button">My Reports</button></a> <!-- Change this to user's reports -->
        </div>
        <div class="bottom-div">
          <hr>
          <div class="smallMenu">Profile:</div>
          <div class="user-info">
            <h2>Email Id:</h2>
            <h3>dxdelvin@gmail.com</h3> <!-- Change this to user's email -->
          </div>
          <a href="/login"><button class="logout-button">Logout</button></a>
        </div>
    </div>
    <div class="chat-container">
      <div id="dataContainer"></div> <!-- Data container for user's posts -->
    </div>
  </div>

  <script>
    // User-specific data (replace with actual user's data)
    const userData = [
      { title: "User's Post 1", enquiry: "User's Text 1", location: "User's Location 1", likes: 3, dislikes: 1, img: './img/user_post_1.png' },
      { title: "User's Post 2", enquiry: "User's Text 2", location: "User's Location 2", likes: 7, dislikes: 0, img: './img/user_post_2.png' },
    ];

    userData.sort((a, b) => b.likes - a.likes);

    const container = document.getElementById('dataContainer');
    userData.forEach(item => {
      const div = document.createElement('div');
      div.classList.add('item');

      const locationPara = document.createElement('span');
      locationPara.classList.add('location');
      locationPara.textContent = item.location;
      div.appendChild(locationPara);

      const likesPara = document.createElement('span');
      likesPara.classList.add('likes');
      likesPara.textContent = `Likes: ${item.likes}`;
      div.appendChild(likesPara);

      const titlePara = document.createElement('p');
      titlePara.textContent = item.title;
      div.appendChild(titlePara);

      const enquiryPara = document.createElement('p');
      enquiryPara.textContent = item.enquiry;
      div.appendChild(enquiryPara);

      const img = document.createElement('img');
      img.src = item.img;
      div.appendChild(img);

      container.appendChild(div);
    });
  </script>
</body>
</html>

